package com.bazarify.client;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import java.util.List;
import com.bazarify.model.Shipping;

@FeignClient(name = "shipping-service", url = "http://localhost:8081")
public interface ShippingClient {
    @GetMapping("/shippings/order/{orderId}")
    List<Shipping> getShippingByOrderId(@PathVariable("orderId") Long orderId);
}
